@model IEnumerable<LibraryService.Models.LibraryItem>

@{
    ViewBag.Title = "Home Page";
}
@section Styles {
    <link href="@Url.Content("~/Styles/index_style.css")" rel="stylesheet" type="text/css" />
}

<h2>Find your item.</h2>

@using Microsoft.AspNet.Identity
@using LibraryService.Models


@using (Html.BeginForm())
{
<p>
    <div class="form-group">
        @Html.Label("Search:", new { @class = "col-sm-1 control-label" })
        @Html.TextBox("SearchString", "", new { @class = "col-md-2 control-label" })
        <input class="input-group mb-3" placeholder="Search" type="submit" value="Search" />
        <div>
            @Html.DropDownList("Genre",
                        new SelectList(Enum.GetValues(typeof(LibraryService.Models.Genre))),
                        "Select Genre",
                        new { @class = "form-control"})
        </div>
        <div>
            @Html.DropDownList("Status",
                        new SelectList(Enum.GetValues(typeof(LibraryService.Models.Status))),
                        "Select Status",
                        new { @class = "form-control"})
        </div>
        <div>
            @Html.DropDownList("Type",
                        new SelectList(Enum.GetValues(typeof(LibraryService.Models.Type))),
                        "Select Type",
                        new { @class = "form-control"})
        </div>
    </div>
</p>
}
@if (Model.Any())
{


<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Publisher
        </th>
        <th>
            Type
        </th>
        <th>
            Genre
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Publisher)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>

        @if (item.Type == LibraryService.Models.Type.Book)
            {
        <td>
            @if (Request.IsAuthenticated)
            {
                if (item.Status == Status.Reserved)
                {
                    if (((List<User>)item.BookmarkedBy).Select(u => u.UserId).Contains(HttpContext.Current.User.Identity.GetUserId()))
                    {
                        <div>
                            @Html.ActionLink("Details", "DetailsBook", new { id = item.id, Controller = "LibraryItems" }) |
                            @Html.ActionLink("Dereserve", "DeleteReservationInList", new { id = item.id }) |
                            @Html.ActionLink("UnBookmark", "DeleteBookmarkInList", new { id = item.id })
                        </div>
                    }
                    else
                    {
                        <div>
                            @Html.ActionLink("Details", "DetailsBook", new { id = item.id, Controller = "LibraryItems" }) |
                            @Html.ActionLink("Dereserve", "DeleteReservationInList", new { id = item.id }) |
                            @Html.ActionLink("Bookmark", "BookmarkBook", new { id = item.id })
                        </div>
                    }
                }
                else
                {
                    if (((List<User>)item.BookmarkedBy).Select(u => u.UserId).Contains(HttpContext.Current.User.Identity.GetUserId()))
                    {
                        <div>
                            @Html.ActionLink("Details", "DetailsBook", new { id = item.id, Controller = "LibraryItems" }) |
                            @Html.ActionLink("Reserve", "ReserveBook", new { id = item.id, Controller = "LibraryItems" }) |
                            @Html.ActionLink("UnBookmark", "DeleteBookmarkInList", new { id = item.id })
                        </div>
                    }
                    else
                    {
                        <div>
                            @Html.ActionLink("Details", "DetailsBook", new { id = item.id, Controller = "LibraryItems" }) |
                            @Html.ActionLink("Reserve", "ReserveBook", new { id = item.id, Controller = "LibraryItems" }) |
                            @Html.ActionLink("Bookmark", "BookmarkBook", new { id = item.id, Controller = "LibraryItems" })
                        </div>
                    }
                }
            }
            else
            {
                @Html.ActionLink("Details", "DetailsBook", new { id = item.id, Controller = "LibraryItems" })
            }
        </td>
        }
        @if (item.Type == LibraryService.Models.Type.DVD)
            {
        <td>
            @if (Request.IsAuthenticated)
            {
                if (item.Status == Status.Reserved)
                {
                    if (((List<User>)item.BookmarkedBy).Select(u => u.UserId).Contains(HttpContext.Current.User.Identity.GetUserId()))
                    {
                        <div>
                            @Html.ActionLink("Details", "DetailsDVD", new { id = item.id, Controller = "LibraryItems" }) |
                            @Html.ActionLink("Dereserve", "DeleteReservationInList", new { id = item.id }) |
                            @Html.ActionLink("UnBookmark", "DeleteBookmarkInList", new { id = item.id })
                        </div>
                    }
                    else
                    {
                        <div>
                            @Html.ActionLink("Details", "DetailsDVD", new { id = item.id, Controller = "LibraryItems" }) |
                            @Html.ActionLink("Dereserve", "DeleteReservationInList", new { id = item.id }) |
                            @Html.ActionLink("Bookmark", "BookmarkDVD", new { id = item.id, Controller = "LibraryItems" })
                        </div>
                    }
                }
                else
                {
                    if (((List<User>)item.BookmarkedBy).Select(u => u.UserId).Contains(HttpContext.Current.User.Identity.GetUserId()))
                    {
                        <div>
                            @Html.ActionLink("Details", "DetailsDVD", new { id = item.id, Controller = "LibraryItems" }) |
                            @Html.ActionLink("Reserve", "ReserveDVD", new { id = item.id, Controller = "LibraryItems" }) |
                            @Html.ActionLink("UnBookmark", "DeleteBookmarkInList", new { id = item.id })
                        </div>
                    }
                    else
                    {
                        <div>
                            @Html.ActionLink("Details", "DetailsDVD", new { id = item.id, Controller = "LibraryItems" }) |
                            @Html.ActionLink("Reserve", "ReserveDVD", new { id = item.id, Controller = "LibraryItems" }) |
                            @Html.ActionLink("Bookmark", "BookmarkDVD", new { id = item.id, Controller = "LibraryItems" })
                        </div>
                    }
                }
            }
            else
            {
                @Html.ActionLink("Details", "DetailsDVD", new { id = item.id, Controller="LibraryItems"})
            }
        </td>
            }
    </tr>
    }

</table>
}

