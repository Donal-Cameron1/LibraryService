@model IEnumerable<LibraryService.Models.LibraryItem>

@{
    ViewBag.Title = "NewItems";
}
@using Microsoft.AspNet.Identity

<div class="jumbotron">
    <h2>See what's new</h2>
    <p class="lead">Or search through our catalogue.</p>
    <p>
        @Html.ActionLink("Search >>", "Searchbar", "Home", null, new { @class = "btn btn-primary btn-lg"}) </p>
</div>

<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Publisher
        </th>
        <th>
            Type
        </th>
        <th>
            Genre
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Publisher)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        @if (item.Type == LibraryService.Models.Type.Book)
        {
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.id, Controller = "Books" }) |
                @if (!item.BookmarkedBy.Where(u => u.UserId == HttpContext.Current.User.Identity.GetUserId()).Any())
                {
                    @Html.ActionLink("Bookmark", "BookmarkNewBook", new { id = item.id, Controller = "Books" })}
            </td>
        }
        @if (item.Type == LibraryService.Models.Type.DVD)
        {
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.id, Controller = "DVDs" }) |
                @Html.ActionLink("Bookmark", "BookmarkNewDVD", new { id = item.id, Controller = "DVDs" })
            </td>
        }
    </tr>
    }

</table>