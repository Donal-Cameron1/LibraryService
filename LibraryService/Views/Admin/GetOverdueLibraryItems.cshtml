@model IEnumerable<LibraryService.Models.LibraryItem>

@{
    ViewBag.Title = "GetOverdueLibraryItems";
}

<h2>Overdue Items</h2>
@using (Html.BeginForm())
    {
<div class="form-group">
    @Html.Label("Search for title:", new { @class = "col-sm-1 control-label" })
    @Html.TextBox("searchString", "", new { @class = "col-md-2 control-label" })
    <input class="input-group mb-3" placeholder="Search" type="submit" value="Search" />
</div>
    }
@if (Model.Any())
    {
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publisher)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LibraryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AgeRestriction)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
            {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Publisher)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LibraryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AgeRestriction)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReturnDate)
        </td>

        @if (item.Type == LibraryService.Models.Type.Book)
                    {
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.id, Controller = "Books" }) |
            @Html.ActionLink("Return Item", "DeleteReservation", new { id = item.id, Controller = "Books" })
        </td>
                    }
        @if (item.Type == LibraryService.Models.Type.DVD)
                    {
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.id, Controller = "DVDs" }) |
            @Html.ActionLink("Return Item", "DeleteReservation", new { id = item.id, Controller = "DVDs" })
        </td>
                    }

    </tr>
            }
</table>

    }
    else
    {
<p>No overdue items found.</p>
    }
