@model IEnumerable<LibraryService.Models.LibraryItem>

@{
    ViewBag.Title = "ShowItemsOfUser";
}

@if (Model.Any())
{
    <h2>Your laoned items</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LibraryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeRestriction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LibraryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AgeRestriction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>

                @if (item.Type == LibraryService.Models.Type.Book)
                {
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.id, Controller = "Books" }) |
                        @Html.ActionLink("Extend loan", "", new { id = item.id })
                    </td>
                }
                @if (item.Type == LibraryService.Models.Type.DVD)
                {
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.id, Controller = "DVDs" }) |
                        @Html.ActionLink("Extend loan", "", new { id = item.id })
                    </td>
                }

            </tr>
        }
    </table>

}
else
{
    <h2>Your items.</h2>
    <p>Apparently you have nothing loaned at the moment.</p>
}
